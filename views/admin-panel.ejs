<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Admin Panel</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .search-container {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .search-container input[type=text] {
            padding: 6px;
            width: 300px;
            font-size: 17px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .search-container button {
            padding: 6px 10px;
            margin-left: 5px;
            background-color: #f2f2f2;
            font-size: 17px;
            border: 1px solid #ccc;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <br>
    <div class="container">
        <h1>Welcome to the Admin Panel</h1>
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search for email id.." onkeyup="searchEmail()">
            <br>
            <br>
            <button onclick="clearSearch()">Clear</button>
        </div>
        <h2>Check-in Counts</h2>
        <table>
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Day 1</td>
                    <td><span id="day1Count"><%= day1Count %></span></td>
                </tr>
                <tr>
                    <td>Day 2</td>
                    <td><span id="day2Count"><%= day2Count %></span></td>
                </tr>
            </tbody>
        </table>

        <h2>Recipients List</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Day-1 Check In</th>
                    <th>Day-2 Check In</th>
                </tr>
            </thead>
            <tbody id="recipientsTable">
                <% recipients.forEach(recipient => { %>
                    <tr>
                        <td><%= recipient.name %></td>
                        <td><%= recipient.email %></td>
                        <td><%= recipient.mobile %></td>
                        <td><%= recipient.day1_checkin %></td>
                        <td><%= recipient.day2_checkin %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <% if (error) { %>
            <p>Error: <%= error %></p>
        <% } %>
    </div>
    <script>
        function searchEmail() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("recipientsTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[2];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }

        function clearSearch() {
            document.getElementById("searchInput").value = "";
            var table, tr, i;
            table = document.getElementById("recipientsTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                tr[i].style.display = "";
            }
        }

        setInterval(() => {
            fetch('/admin-panel_cc')
            .then(response => response.json())
            .then(data => {
                document.getElementById('day1Count').innerText = data.day1Count;
                document.getElementById('day2Count').innerText = data.day2Count;
            })
            .catch(error => console.error('Error fetching data:', error));
        }, 3000);
    </script>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>