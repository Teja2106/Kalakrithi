<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head.ejs') %>
</head>
<body>
    <div class="container">
        <br>
        <h1>Re-mail page</h1>
        <br>
        <% if (success) { %>
            <div class="alert alert-success">
                <p><%= success %></p>
            </div>
        <% } %>
        <form action="/re-mail" method="post">
            <div class="form-floating mb-3">
                <input type="text" name="name" class="form-control" id="floatingInput" placeholder="Reg No.">
                <label for="floatingInput">Name</label>
              </div>
              <div class="form-floating">
                <input type="email" name="email" class="form-control" id="floatingPassword" placeholder="College Mail ID.">
                <label for="floatingPassword">College Mail</label>
            </div>
            <br>
            <button class="btn btn-primary" type="submit">Send Email.</button>
            <% if (error) { %>
                <div class="alert alert-danger">
                    <p><%= error %></p>
                </div>
            <% } %>
        </form>
    </div>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>